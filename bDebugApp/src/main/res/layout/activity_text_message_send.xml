<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="vertical">

        <!-- Show Android Device info -->

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <TextView
                style="@style/titleCommonLayout"
                android:layout_weight="1"
                android:text="# Device Info"/>

            <Button
                android:id="@+id/btnShowDeviceInfo"
                style="@style/btnSelectLayout"
                android:text="SHOW/HIDE"
                android:textSize="11sp"/>
        </TableRow>

        <TextView
            android:id="@+id/tvDeviceInfo"
            style="@style/bodyCommonLayout"
            android:text="..."
            android:visibility="gone"/>

        <!-- Trigger Message Protocol Type -->

        <TextView
            style="@style/titleCommonLayout"
            android:text="# Protocol Type"/>

        <RadioGroup
            android:id="@+id/rgProtocolType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/rbProtocolTypeAuto"
                style="@style/rbCommonLayout"
                android:checked="true"
                android:text="Auto"
                />

            <RadioButton
                android:id="@+id/rbProtocolTypeSms"
                style="@style/rbCommonLayout"
                android:text="SMS"/>

            <RadioButton
                android:id="@+id/rbProtocolTypeLms"
                style="@style/rbCommonLayout"
                android:text="LMS"
                />

            <RadioButton
                android:id="@+id/rbProtocolTypeMms"
                style="@style/rbCommonLayout"
                android:text="MMS"
                android:visibility="gone"
                />
        </RadioGroup>

        <!-- Fill out message data (whom, text, data) -->

        <TextView
            style="@style/titleCommonLayout"
            android:text="### Message Data ###"/>

        <!-- SENDER (phone number) -->

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <TextView
                style="@style/bodyCommonLayout"
                android:text="Sender"/>

            <EditText
                android:id="@+id/etSenderNumber"
                style="@style/etCommonLayout"
                android:enabled="false"
                android:hint="..."
                />
        </TableRow>

        <!-- RECEIVER (phone number) -->

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <TextView
                style="@style/bodyCommonLayout"
                android:text="Receiver"/>

            <LinearLayout
                style="@style/llyCommonLayout"
                android:orientation="horizontal"
                >

                <EditText
                    android:id="@+id/etReceiverName"
                    style="@style/etCommonLayout"
                    android:layout_weight="2"
                    android:enabled="false"
                    android:hint="...name"
                    />

                <EditText
                    android:id="@+id/etReceiverNumber"
                    style="@style/etCommonLayout"
                    android:hint="..."
                    android:inputType="numberSigned|phone"
                    />
            </LinearLayout>

            <Button
                android:id="@+id/btnSelectReceiverNumber"
                style="@style/btnSelectLayout"
                android:text="SELECT"/>
        </TableRow>

        <!-- TEXT MESSAGE (string with length) -->

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/tvMsgTitle"
                        style="@style/bodyCommonLayout"
                        android:layout_weight="1"
                        android:text="msg"/>

                    <TextView
                        android:id="@+id/tvMsgSize"
                        style="@style/bodyCommonLayout"
                        android:layout_weight="1"
                        android:hint="..."/>
                </LinearLayout>
                <EditText
                    android:id="@+id/etTextMessage"
                    style="@style/etCommonLayout"
                    android:hint="..."
                    android:maxLines="5"
                    android:minLines="2"
                    />
            </LinearLayout>

            <Button
                android:id="@+id/btnSelectMessage"
                style="@style/btnSelectLayout"
                android:text="SELECT"/>
        </TableRow>

        <!-- IMAGE DATA (uri or bitmap) -->

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            >

            <TextView
                style="@style/bodyCommonLayout"
                android:text="image"/>

            <EditText
                android:id="@+id/etImageDataInfo"
                style="@style/etCommonLayout"
                android:enabled="false"
                android:hint="..."
                />

            <Button
                android:id="@+id/btnSelectImageData"
                style="@style/btnSelectLayout"
                android:text="SELECT"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <Button
                android:id="@+id/btnSendMessage"
                style="@style/btnCommonLayout"
                android:text="SEND"/>
        </TableRow>

        <ListView
            android:id="@+id/lvEvents"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="#ffd084"
            android:stackFromBottom="true"
            android:transcriptMode="alwaysScroll"/>

    </LinearLayout>
</ScrollView>