<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <LinearLayout
        android:id="@+id/activity_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="vertical">

        <TextView
            style="@style/titleCommonLayout"
            android:text="# Message(SMS/MMS)"/>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <Button
                android:id="@+id/btnCommunicationMessageSender"
                style="@style/btnCommonLayout"
                android:text="Comm.Msg.Sender"/>
            <Button
                android:id="@+id/btnCommunicationMessageReader"
                style="@style/btnCommonLayout"
                android:text="Comm.Msg.Reader"/>
        </TableRow>

        <TextView
            style="@style/titleCommonLayout"
            android:text="# process"/>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <Button
                android:id="@+id/btnExecuteSameProc"
                style="@style/btnCommonLayout"
                android:text="exec Same Process"/>
            <Button
                android:id="@+id/btnExecuteOtherProc"
                style="@style/btnCommonLayout"
                android:text="exec Other Process"/>
        </TableRow>

        <TextView
            style="@style/titleCommonLayout"
            android:text="# STT"/>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <Button
                android:id="@+id/btn_go_naver_demo"
                style="@style/btnCommonLayout"
                android:text="GO NAVER STT" />

            <Button
                android:id="@+id/btn_go_kakao_demo"
                style="@style/btnCommonLayout"
                android:text="GO KAKAO STT" />

            <Button
                android:id="@+id/btn_go_google_demo"
                style="@style/btnCommonLayout"
                android:text="GO GOOGLE STT" />
        </TableRow>

        <TextView
            style="@style/titleCommonLayout"
            android:text="# smart voice"/>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <Button
                android:id="@+id/btn_service_bind"
                style="@style/btnCommonLayout"
                android:text="Bind service"/>

            <Button
                android:id="@+id/btn_service_unbind"
                style="@style/btnCommonLayout"
                android:text="Unbind service"/>
        </TableRow>

        <EditText
            android:id="@+id/et_speech_msg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="say ..."
            />

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <Button
                android:id="@+id/btn_tts_play"
                style="@style/btnCommonLayout"
                android:text="TTS PLAY"/>

            <Button
                android:id="@+id/btn_tts_stop"
                style="@style/btnCommonLayout"
                android:text="TTS STOP"/>
        </TableRow>

    </LinearLayout>
</ScrollView>