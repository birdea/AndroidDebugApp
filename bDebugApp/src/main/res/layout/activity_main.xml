<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <LinearLayout
        android:id="@+id/activity_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="vertical">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <Button
                android:id="@+id/btnSetAssistApp"
                style="@style/btnCommonLayout"
                android:text="Set Assist App"/>

            <Button
                android:id="@+id/btnGetAssistApp"
                style="@style/btnCommonLayout"
                android:text="Get Assist App"/>
        </TableRow>

        <Button
            android:id="@+id/btnGetContentProviderValue"
            style="@style/btnCommonLayout"
            android:text="Get C.P."/>

        <Button
            android:id="@+id/btnTestVoiceChrome"
            style="@style/btnCommonLayout"
            android:text="VoiceChromeView"/>

        <FrameLayout
            android:id="@+id/voicechrome_view_frame"
            android:layout_width="match_parent"
            android:layout_height="106dp"
            android:layout_alignParentBottom="true"
            android:layout_gravity="center_horizontal"
            android:background="#ffffff">

            <custom.ChromeBarView
                android:id="@+id/chrome_bar_view"
                android:layout_width="140dp"
                android:layout_height="70dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal" />

            <RelativeLayout
                android:id="@+id/watermark_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:id="@+id/watermark"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="0dp"
                    android:text="Watermark"
                    android:textColor="#ffaaaa"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/watermark_asr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_alignParentBottom="true"
                    android:text="Watermark"
                    android:textColor="#ffaaaa"
                    android:textSize="15dp" />
            </RelativeLayout>
        </FrameLayout>

        <Button
            android:id="@+id/btnTestAnim"
            style="@style/btnCommonLayout"
            android:text="animation"/>

        <TextView
            style="@style/titleCommonLayout"
            android:text="# Intent(CALL)"/>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <Button
                android:id="@+id/btnSetAudioVolume"
                style="@style/btnCommonLayout"
                android:text="SetVolume"
                android:textSize="10sp"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <Button
                android:id="@+id/btnCallSpeakerPhoneOn"
                style="@style/btnCommonLayout"
                android:text="Call SpeakerOn"
                android:textSize="10sp"/>
            <Button
                android:id="@+id/btnCallSpeakerPhoneOff"
                style="@style/btnCommonLayout"
                android:text="Call SpeakerOff"
                android:textSize="10sp"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <Button
                android:id="@+id/btnGoCallStart"
                style="@style/btnCommonLayout"
                android:text="CallStart"
                android:textSize="10sp"/>
            <Button
                android:id="@+id/btnGoCallEnd"
                style="@style/btnCommonLayout"
                android:text="CallEnd"
                android:textSize="10sp"/>
            <Button
                android:id="@+id/btnGoCallLogView"
                style="@style/btnCommonLayout"
                android:text="CallLog"
                android:textSize="10sp"/>
            <Button
                android:id="@+id/btnGoContactView"
                style="@style/btnCommonLayout"
                android:text="Contact"
                android:textSize="10sp"/>
        </TableRow>

        <TextView
            style="@style/titleCommonLayout"
            android:text="# Action(CALL)"/>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <Button
                android:id="@+id/btnSeeCallLog"
                style="@style/btnCommonLayout"
                android:text="SeeCallLog"
                android:textSize="10sp"/>
            <Button
                android:id="@+id/btnSeeContact"
                style="@style/btnCommonLayout"
                android:text="SeeContact"
                android:textSize="10sp"/>
        </TableRow>

        <TextView
            style="@style/titleCommonLayout"
            android:text="# Bluetooth(CALL)"/>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <Button
                android:id="@+id/btnSpeakerOn"
                style="@style/btnCommonLayout"
                android:text="SpeakerOn"
                android:textSize="10sp"/>
            <Button
                android:id="@+id/btnSpeakerOff"
                style="@style/btnCommonLayout"
                android:text="SpeakerOff"
                android:textSize="10sp"/>
            <Button
                android:id="@+id/btnBtScoOn"
                style="@style/btnCommonLayout"
                android:text="BtScoOn"
                android:textSize="10sp"/>
            <Button
                android:id="@+id/btnBtScoOff"
                style="@style/btnCommonLayout"
                android:text="BtScoOff"
                android:textSize="10sp"/>
        </TableRow>

        <Button
            android:id="@+id/btnAudioMode"
            style="@style/btnCommonLayout"
            android:text="AudioMode"
            android:textSize="10sp"/>

        <TextView
            style="@style/titleCommonLayout"
            android:text="# Message(SMS/MMS)"/>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <Button
                android:id="@+id/btnCommunicationMessageSender"
                style="@style/btnCommonLayout"
                android:text="Comm.Msg.Sender"/>
            <Button
                android:id="@+id/btnCommunicationMessageReader"
                style="@style/btnCommonLayout"
                android:text="Comm.Msg.Reader"/>
        </TableRow>

        <TextView
            style="@style/titleCommonLayout"
            android:text="# reflection"/>

        <Button
            android:id="@+id/btnSetOnReflect"
            style="@style/btnCommonLayout"
            android:text="set on reflect"/>

        <TextView
            style="@style/titleCommonLayout"
            android:text="# process"/>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <Button
                android:id="@+id/btnExecuteSameProc"
                style="@style/btnCommonLayout"
                android:text="exec Same Process"/>
            <Button
                android:id="@+id/btnExecuteOtherProc"
                style="@style/btnCommonLayout"
                android:text="exec Other Process"/>
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <EditText
                android:id="@+id/etAdbCommand"
                style="@style/etCommonLayout"
                android:layout_weight="1"
                android:text="adb shell input keyevent"/>
            <Button
                android:id="@+id/btnExecuteAdbCommand"
                style="@style/btnCommonLayout"
                android:layout_weight="0"
                android:layout_width="100dp"
                android:text="exec"/>
        </TableRow>

        <TextView
            style="@style/titleCommonLayout"
            android:text="# STT"/>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <Button
                android:id="@+id/btn_go_naver_demo"
                style="@style/btnCommonLayout"
                android:text="GO NAVER STT" />

            <Button
                android:id="@+id/btn_go_kakao_demo"
                style="@style/btnCommonLayout"
                android:text="GO KAKAO STT" />

            <Button
                android:id="@+id/btn_go_google_demo"
                style="@style/btnCommonLayout"
                android:text="GO GOOGLE STT" />
        </TableRow>

        <TextView
            style="@style/titleCommonLayout"
            android:text="# smart voice"/>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <Button
                android:id="@+id/btn_service_bind"
                style="@style/btnCommonLayout"
                android:text="Bind service"/>

            <Button
                android:id="@+id/btn_service_unbind"
                style="@style/btnCommonLayout"
                android:text="Unbind service"/>
        </TableRow>

        <EditText
            android:id="@+id/et_speech_msg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="say ..."
            />

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <Button
                android:id="@+id/btn_tts_play"
                style="@style/btnCommonLayout"
                android:text="TTS PLAY"/>

            <Button
                android:id="@+id/btn_tts_stop"
                style="@style/btnCommonLayout"
                android:text="TTS STOP"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <Button
                android:id="@+id/btnAidlService"
                style="@style/btnCommonLayout"
                android:text="aidl service"/>

            <Button
                android:id="@+id/btnAidlActivity"
                style="@style/btnCommonLayout"
                android:text="aidl activity"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <Button
                android:id="@+id/btnKoreanJosaConverterTest"
                style="@style/btnCommonLayout"
                android:text="Korean Josa Converter Test"/>
        </TableRow>

    </LinearLayout>
</ScrollView>